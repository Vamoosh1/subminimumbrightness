<PreferenceScreen xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:android="http://schemas.android.com/apk/res/android">

    <PreferenceCategory app:title="@string/dimmer_category">
        <SeekBarPreference
            app:key="dimmer_slider"
            app:title="@string/dimmer_title"
            android:max="90"
            app:defaultValue="0" />
        <SeekBarPreference
            android:id="@+id/color_temperature_slider"
            android:key="color_temperature_slider"
            android:title="Color Temperature"
            android:max="100"
            android:defaultValue="0"
            android:summary="Adjust the color temperature of the screen." />
        <Preference
            app:key="open_accessibility_settings"
            app:title="Open Accessibility Settings" />
    </PreferenceCategory>
</PreferenceScreen>
